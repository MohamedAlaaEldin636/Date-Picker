<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseText">
        <item name="android:gravity">center</item>

        <item name="android:textDirection">locale</item>

        <item name="android:textColor">@android:color/white</item>

        <item name="android:includeFontPadding">true</item>

        <item name="android:textStyle">normal</item>

        <item name="android:textSize">16sp</item>
    </style>
    <style name="BaseText.PNUMedium">
        <item name="android:includeFontPadding">false</item>

        <item name="android:fontFamily">@font/pnu_medium_xml</item>
    </style>
    <style name="BaseText.PNUBold">
        <item name="android:textStyle">bold</item>

        <item name="android:includeFontPadding">false</item>

        <item name="android:fontFamily">@font/pnu_bold_xml</item>
    </style>
    <style name="BaseText.PNURegular">
        <item name="android:includeFontPadding">false</item>

        <item name="android:fontFamily">@font/pnu_regular_xml</item>
    </style>
    <style name="BaseText.PoppinsRegular">
        <item name="android:includeFontPadding">false</item>

        <item name="android:fontFamily">@font/poppins_regular_xml</item>
    </style>
</resources>